@model IEnumerable<Project_Travel.Models.Tour>

@{
    ViewBag.Title = "ListTour";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh Sách Tour</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th> Tên Tour </th>
        <th> Hình ảnh</th>
        <th> Giá </th>
        <th> Ngày khởi hành</th>
        <th> Phương tiện </th>
        <th> Số ngày đi</th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenTour)
        </td>
        <td>
            <img src="@item.Hinh" width="270" alt="Alternate Text" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayKhoiHanh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhuongTien)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoNgayDi)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MaTour }) |
            @Html.ActionLink("Detail", "Detail", new { id=item.MaTour }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MaTour })
        </td>
    </tr>
}

</table>
