@model Project_WebDuLich.Context.Tour

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
<body>
    <section class="section-content bg-white padding-y">
        <div class="container">
            <div class="row">
                <aside class="col-md-6">
                    <div class="card">
                        <article class="gallery-wrap">
                            <div class="img-big-wrap">
                                <div> <a href="#"><img src="@Model.Hinh"></a></div>
                            </div> 

                        </article> 
                    </div> 
                </aside>
                <main class="col-md-6">
                    <article class="product-info-aside">
                        <h2 class="title mt-3">@Model.TenTour</h2>
                        <div class="rating-wrap my-3">
                            <ul class="rating-stars">
                                <li style="width:80%" class="stars-active">
                                    <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </li>
                                <li>
                                    <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </li>
                            </ul>
                            <small class="label-rating text-muted">132 reviews</small>
                            <small class="label-rating text-success"> <i class="fa fa-clipboard-check"></i> 154 orders </small>
                        </div>

                        <div class="mb-3">
                            <var class="price h4">Giá người lớn:  @String.Format("{0:0,0}", @Model.GiaNguoiLon) vnđ</var> , <var class="price h4">Trẻ em:  @String.Format("{0:0,0}", @Model.GiaTreEm) vnđ</var>
                        </div>
                        <div class="mb-3">
                            Giới Thiệu : @Model.GhiChu
                        </div>


                        <dl class="row">

                            <dt class="col-sm-3">Ngày khởi hành</dt>
                            <dd class="col-sm-9">@Model.NgayKhoiHanh</dd>

                            <dt class="col-sm-3">Số ngày đi</dt>
                            <dd class="col-sm-9">@Model.SoNgayDi</dd>

                            <dt class="col-sm-3">Phương tiện</dt>
                            <dd class="col-sm-9">@Model.PhuongTien</dd>
                        </dl>

                        <div class="form-row  mt-4">
                            <div class="form-group col-md flex-grow-0">
                            </div>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-actions no-color">
                                    <input type="submit" value="Delete" class="btn btn-default" />
                                    @Html.ActionLink("Back to List", "Index")
                                </div>
                            }
                        </div>

                    </article> 
                </main> 
            </div> 
        </div> 
    </section>
    <section class="section-subscribe padding-y-lg">
        <div class="container">
            <h3 class="pb-2 text-center text-white">Nhập Email để nhận được nhiều ưu đãi hơn nhé !!!</h3>
            <div class="row justify-content-md-center">
                <div class="col-lg-5 col-md-6">
                    <form class="form-row">
                        <div class="col-md-8 col-7">
                            <input class="form-control border-0" placeholder="Your Email" type="email">
                        </div> 
                        <div class="col-md-4 col-5">
                            <button type="submit" class="btn btn-block btn-warning"> <i class="fa fa-envelope"></i> Subscribe </button>
                        </div> 
                    </form>
                </div> 
            </div>
        </div>
    </section>
    <div>
    </div>
    </body>