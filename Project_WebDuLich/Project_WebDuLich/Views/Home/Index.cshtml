@model List<Project_WebDuLich.Context.Tour>
@Html.Raw(TempData["msg"])
<div class="container">
    <section class="section-main padding-y">
        <main class="card">
            <div class="card-body">
                <div id="carousel1_indicator" class="slider-home-banner carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carousel1_indicator" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel1_indicator" data-slide-to="1"></li>
                        <li data-target="#carousel1_indicator" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/Content/img/imgcondao.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/img/imgdalat.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/img/imgmuine.jpg" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/img/imgphuquoc.jpg" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/img/imgsapa.jpg" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carousel1_indicator" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel1_indicator" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div> <!-- card-body.// -->
        </main> <!-- card.// -->
    </section>
    <section class="padding-bottom">
        <h4 class="title-section text-uppercase">Deals Sốc !!!</h4>
        <div class="card card-deal">
            <div class="row no-gutters items-wrap">
                @foreach (var item in Model)
                {
                    <figure class="card-product-grid card-sm">
                        <a href="@Url.Action("Detail","Product",new {id = item.MaTour})" class="img-wrap">
                            <img src="@item.Hinh">
                        </a>
                        <div class="text-wrap p-3">
                            <a href="#" class="title">@item.TenTour</a>
                            <h5 href="#" class="title">Giá người lớn:  @String.Format("{0:0,0}", @item.GiaNguoiLon) vnđ</h5>
                            <h5 href="#" class="title">Giá trẻ em: @String.Format("{0:0,0}", @item.GiaTreEm) vnđ</h5>
                            <a href="#" class="title">@item.SoNgayDi</a>
                            <span class="badge badge-danger"> -20% </span>
                            <a class="btn btn-block btn-warning" href="@Url.Action("ThemGiohang", "Giohang", new { @MaTour = item.MaTour, @strURL = Request.Url.ToString() })">Đặt mua</a>
                        </div>
                    </figure>
                }
            </div>
        </div>
    </section>
    <section class="padding-bottom">
        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">Điểm Mạnh</h4>
        </header>
        <div class="row">
            <div class="col-md-3 col-sm-6">
                <article class="card card-post">
                    <img src="~/Content/usephone.jpg" class="card-img-top">
                    <div class="card-body">
                        <h6 class="title">Truy Cập Mọi Lúc</h6>
                        <p class="small text-uppercase text-muted">Thuận tiện cho việc đặt lịch</p>
                    </div>
                </article>
            </div>
            <div class="col-md-3 col-sm-6">
                <article class="card card-post">
                    <img src="~/Content/Ví-MOMO-1200x900(1)-800x450.jpg" class="card-img-top">
                    <div class="card-body">
                        <h6 class="title">Thanh Toán Online</h6>
                        <p class="small text-uppercase text-muted">Momo & Banking</p>
                    </div>
                </article>
            </div>
            <div class="col-md-3 col-sm-6">
                <article class="card card-post">
                    <img src="~/Content/planning-1569943662294502844823.jpg" class="card-img-top">
                    <div class="card-body">
                        <h6 class="title">Lịch Trình Đa Dạng</h6>
                        <p class="small text-uppercase text-muted">Không gây nhàm chán</p>
                    </div>
                </article>
            </div>
            <div class="col-md-3 col-sm-6">
                <article class="card card-post">
                    <img src="~/Content/xe.jpg" class="card-img-top">
                    <div class="card-body">
                        <h6 class="title">Đa Dạng Phương Tiện</h6>
                        <p class="small text-uppercase text-muted">Đa dạng sự lựa chọn</p>
                    </div>
                </article>
            </div>
        </div>

    </section>
</div>
<section class="section-subscribe padding-y-lg">
    <div class="container">
        <h3 class="pb-2 text-center text-white">Nhập Email để nhận được nhiều ưu đãi hơn nhé !!!</h3>
        <div class="row justify-content-md-center">
            <div class="col-lg-5 col-md-6">
                <form class="form-row">
                    <div class="col-md-8 col-7">
                        <input class="form-control border-0" placeholder="Your Email" type="email">
                    </div> <!-- col.// -->
                    <div class="col-md-4 col-5">
                        <button type="submit" class="btn btn-block btn-warning"> <i class="fa fa-envelope"></i> Subscribe </button>
                    </div> <!-- col.// -->
                </form>
            </div> <!-- col-md-6.// -->
        </div>
    </div>
</section>
