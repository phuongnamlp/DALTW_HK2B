@model Project_WebDuLich.Context.KhachHang
@{
    ViewBag.Title = "Login";
}
<div style="margin-left: 700px">
    <div class="col-md-4" style="padding:5px">
        <div class="card">
            <div style="font-size: 20px; text-align: center; font-weight: bold ; padding:5px">
                Login
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.Label("Email")
                    @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email" })

                </div>
                <div class="form-group">
                    @Html.Label("Mật Khẩu")
                    @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", @placeholder = "MatKhau" })
                </div>
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-primary" value="Login" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>